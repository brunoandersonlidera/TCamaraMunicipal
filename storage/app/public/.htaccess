Options -Indexes

# Garantir leitura pública de arquivos estáticos (Apache 2.4+)
<IfModule mod_authz_core.c>
    Require all granted
</IfModule>

# Compatibilidade com Apache 2.2
<IfModule !mod_authz_core.c>
    Order allow,deny
    Allow from all
</IfModule>

# Bloquear execução de scripts nesta pasta
<FilesMatch "\.(php[0-9]?|phtml|phps|cgi|pl|py|sh|zsh)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Deny from all
    </IfModule>
</FilesMatch>